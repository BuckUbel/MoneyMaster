{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./private/",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "rootDir": "./",
    "noImplicitAny": true,
    "keyofStringsOnly": true,
    "esModuleInterop": true
  },
  "include": [
    "./server/",
    "./base/"
  ],
  "exclude": [
    "node_modules/"
  ]
}
